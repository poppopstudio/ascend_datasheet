      'description' => t('Represents a School datasheet.')
    ],
  ];

  return $bundles;
}


/**
 * Implements hook_views_query_alter().
 */
function ascend_datasheet_views_query_alter(ViewExecutable $view, QueryPluginBase $query) {

  $affected_views = ['datasheets_school_categories_report', 'datasheets_school_proportion_report'];

  if (!in_array($view->id(), $affected_views)) {
    return;
  }

  // Get school from route
  $route_match = \Drupal::routeMatch();
  $school = $route_match->getParameter('school');

  if (!$school) {
    return;
  }

  $school_id = is_object($school) ? $school->id() : $school;

  // Find and update the school filter with the actual school ID
  foreach ($query->where as &$where_group) {
    foreach ($where_group['conditions'] as &$condition) {
      if (isset($condition['field']) &&
          strpos($condition['field'], 'ascend_ds_school_target_id') !== FALSE &&
          $condition['value'] === 'SCHOOL') {
        $condition['value'] = $school_id;
      }
    }
  }
}

/**
 * Implements hook_entity_view_alter().
 */
function ascend_datasheet_entity_view_alter(array &$build, EntityInterface $entity, $display) {
  if ($entity->getEntityTypeId() !== 'school') {
    return;
  }

  $school_id = $entity->id();
  $working_year = \Drupal::service('Drupal\ascend_audit\Services\AuditYearService')->getWorkingYear();

  $storage = \Drupal::entityTypeManager()->getStorage('datasheet');

  // Map stages to their EVA view display keys.
  $stage_displays = [
    'primary' => 'datasheets_school_categories_report_entity_view_1',
    'secondary' => 'datasheets_school_categories_report_entity_view_2',
  ];

  foreach ($stage_displays as $stage => $display_key) {
    // Check if school has data for this stage.
    $count = $storage->getQuery()
      ->accessCheck(FALSE)
      ->condition('type', 'school')
      ->condition('ascend_ds_school', $school_id)
      ->condition('stage', $stage)
      ->condition('year', $working_year)
      ->count()
      ->execute();

    // Hide the EVA view display if no school data exists.
    if ($count == 0 && isset($build[$display_key])) {
      unset($build[$display_key]);
    }
  }
}


/**
 * These two functions were required in order to add compatibility with
 *  field_group module. This also necessitated the datasheet.html.twig template.
 *  https://www.drupal.org/project/field_group/issues/2859858
 */

function ascend_datasheet_theme($existing, $type, $theme, $path) {
  return [
    'datasheet' => [
      'render element' => 'elements',
    ],
  ];
}

function template_preprocess_datasheet(&$variables) {
  $variables['view_mode'] = $variables['elements']['#view_mode'];

  // Helpful $content variable for templates.
  $variables += ['content' => []];
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

function ascend_datasheet_gin_content_form_routes(): array {
  return [
    // Datasheet entity edit form handled by gin.
    'entity.datasheet.add_form',
    'entity.datasheet.edit_form',
  ];
}
